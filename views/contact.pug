extends base.pug

block script
    script
      include ../static/index.js

block style
    style
      include ../static/style.css
      include ../static/styleContact.css


block content
    nav#navbar 
        ul 
            li #[a(href="/") Home ]
            li #[a(href="/") About ]
            li #[a(href="/") Services]
            li #[a(href="/") Class info]
            li #[a(href="/contact") Contact ]
    section.container
        div.form
            h1 Contact Page 
            hr
            form.myForm(action="/contact", method="post") 
                input.myInput(type="text", name="name" placeholder="Enter your name")
                input.myInput(type="phone", name="phone" placeholder="Enter your phone number")
                input.myInput(type="email", name="email" placeholder="Enter your email id")
                input.myInput(type="text", name="address" placeholder="Enter your address")
                input.myInput(type="text", name="desc" placeholder="Enter your concern")
                button.btn 
                    | Submit
